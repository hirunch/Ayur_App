<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg6blur"
    tools:context=".UserActivity">

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/white_low"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/title2" />

    </FrameLayout>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:paddingBottom="50dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="80dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout7"
                android:layout_width="320dp"
                android:layout_height="160dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/user_bg">

                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="70dp">

                    <ImageView
                        android:id="@+id/userPic"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/user" />

                </androidx.cardview.widget.CardView>

                <FrameLayout
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:background="@drawable/user_info">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:fontFamily="@font/andika_new_basic"
                            android:layout_marginStart="30dp"
                            android:textColor="@color/black"
                            android:text="Hello, "
                            android:textSize="20sp"
                            android:textStyle="italic" />

                        <TextView
                            android:id="@+id/usename"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:fontFamily="@font/andika_new_basic"
                            android:layout_marginStart="10dp"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:textSize="20sp"
                            android:textStyle="italic" />


                    </LinearLayout>


                </FrameLayout>


            </LinearLayout>

            <FrameLayout
                android:id="@+id/frameLayout3"
                android:layout_width="186dp"
                android:layout_height="109dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/user_bg">


                <TextView
                    android:id="@+id/profileViewBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:clickable="true"
                    android:enabled="true"
                    android:gravity="center"
                    android:text="Profile"
                    android:textAlignment="center"
                    android:textColor="@color/dark_green"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <TextView
                android:id="@+id/about_view"
                android:layout_width="116dp"
                android:layout_height="45dp"
                android:background="@drawable/user_info"
                android:gravity="center"
                android:text="About"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="30dp" />

            <CheckBox
                android:id="@+id/biometricsCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biometrics On"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginTop="30dp"/>

            <FrameLayout
                android:id="@+id/loginOutBtn"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:background="@drawable/user_info"
                android:gravity="center"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Login Out"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </FrameLayout>


        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:gravity="center"
        android:text="From Chamix"
        android:textAlignment="center"
        android:textSize="12sp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold|italic"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>




</RelativeLayout>