<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg6blur"
    tools:context=".VideosFragment">


    <FrameLayout
        android:id="@+id/videoLayout"
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:background="@color/white_low"
        android:orientation="horizontal"
        android:paddingTop="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">


        <TextView
            android:id="@+id/vidHd"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Videos"
            android:textColor="@color/black"
            android:textSize="28dp" />
    </FrameLayout>


        <ScrollView
            android:id="@+id/scrollView3"
            android:layout_width="match_parent"
            android:layout_height="580dp"
            android:padding="10dp"
            android:background="@drawable/article_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/dataLayout"
                android:layout_marginTop="25dp"
                android:orientation="vertical"
                android:paddingBottom="80dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/article_bg"
                    app:cardCornerRadius="20dp">


                    <WebView
                        android:id="@+id/ytVideo1"
                        android:layout_width="match_parent"
                        android:layout_height="230dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="bottom"
                        android:layout_margin="15dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/stk2"
                        android:gravity="center"
                        android:text="Sri Lankan Ayurveda"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/article_bg"
                    app:cardCornerRadius="20dp">


                    <WebView
                        android:id="@+id/ytVideo2"
                        android:layout_width="match_parent"
                        android:layout_height="230dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="bottom"
                        android:layout_margin="15dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/stk2"
                        android:gravity="center"
                        android:text="කොලෙස්ටෙරෝල් සහ සීනි පාලනයට උදව් කරන අරුම පුදුම තැම්බුම් හොද්ද"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/article_bg"
                    app:cardCornerRadius="20dp">

                    <WebView
                        android:id="@+id/ytVideo3"
                        android:layout_width="match_parent"

                        android:layout_height="230dp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="bottom"
                        android:layout_margin="15dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/stk2"
                        android:gravity="center"
                        android:text="SRI LANKAN AYURVEDA EPISODE 01"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/article_bg"

                    app:cardCornerRadius="20dp">

                    <WebView
                        android:id="@+id/ytVideo4"
                        android:layout_width="match_parent"
                        android:layout_height="230dp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="bottom"
                        android:layout_margin="15dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/stk2"
                        android:gravity="center"
                        android:text="SRI LANKAN AYURVEDA EPISODE 02"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="10dp"
                    android:backgroundTint="@color/article_bg"
                    app:cardCornerRadius="20dp">

                    <WebView
                        android:id="@+id/ytVideo5"
                        android:layout_width="match_parent"
                        android:layout_height="230dp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="bottom"
                        android:layout_margin="15dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/stk2"
                        android:gravity="center"
                        android:text="SRI LANKAN AYURVEDA EPISODE 03"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        tools:ignore="RtlCompat" />


                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>