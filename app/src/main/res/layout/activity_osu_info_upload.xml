<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/bg6blur"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OsuInfoUploadActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="50dp"
        android:paddingBottom="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/cat_shape"
            android:layout_gravity="center_horizontal"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ඔසු වර්ග ඇතුලත් කරන්න"
                android:textAlignment="center"
                android:textColor="@color/green"
                android:textSize="25dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/osuImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/uploading" />

            <EditText
                android:id="@+id/osuTopic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColorHint="@color/hintColor"
                android:hint="ශීර්ෂය (මාතෘකාව) ඇතුලත් කරන්න"
                android:textSize="16dp"
                android:ems="10"
                android:gravity="start|center_vertical"
                android:inputType="text"
                android:padding="16dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/osuDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:textColorHint="@color/hintColor"
                android:gravity="start|center_vertical"
                android:hint="විස්තරාත්මකව දක්වන්න"
                android:inputType="textMultiLine"
                android:padding="16dp"
                android:textColor="@color/black" />


            <Button
                android:id="@+id/osuSaveButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/green"
                android:text="Save"
                android:textSize="18dp" />

        </LinearLayout>
    </FrameLayout>

</ScrollView>